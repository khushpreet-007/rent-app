<% include partials/header.ejs %>
<!-- Posts -->
<div class="w-full min-h-screen bg-zinc-300 px-10 py-8">

<% if (user.posts && user.posts.length > 0) { %>
    <!-- <div class="cards flex flex-wrap gap-10 px-10"> -->
        <div class="cards grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
        <% user.posts.forEach(post => { %>
            <div class="w-72">
                <div class="card mb-8 bg-white rounded-lg overflow-hidden shadow-md">
                    <!-- <img class="w-full h-40 object-cover" src="/images/uploads/<%= post.image %>" alt="<%= post.title %>"> -->
                    <h4 class="p-7 text-gray-800 text-xl font-semibold truncate"><%= post.title %></h4>
                    <p class="p-7 text-gray-800"><%= post.description %></p>
                    <div>
                        <h2>Latitude: <span style="color:red"><%= post.latitude %></span></h2>
                        <h2>Longitude: <span style="color:red"><%= post.longitude %></span></h2>
                    </div>
                </div>
                <form action="/delete/post/<%= post._id %>" method="POST">
                    <button type="submit" class="inline-block px-8 py-2 mt-2 rounded-full bg-red-700 text-white font-semibold hover:bg-red-800 transition duration-300">
                        Delete Post
                    </button>
                </form>
            </div>
        <% }) %>
    </div>
<% } else { %>
    <div class="flex items-center justify-center">
        <p class="text-xl font-semibold text-gray-500">
            You haven't uploaded any content yet.
        </p>
    </div>
<% } %>

</div>

<% include partials/footer.ejs %>
